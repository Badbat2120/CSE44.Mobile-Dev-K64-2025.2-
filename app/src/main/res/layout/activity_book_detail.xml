<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- NÃºt quay láº¡i -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="Back"
        android:tint="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Biá»ƒu tÆ°á»£ng gÃ³c trÃªn bÃªn pháº£i -->
    <LinearLayout
        android:id="@+id/topIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- NÃºt biá»ƒu tÆ°á»£ng sao -->
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/sao" />

        <!-- NÃºt biá»ƒu tÆ°á»£ng yÃªu thÃ­ch -->
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/yeu" />

        <!-- NÃºt biá»ƒu tÆ°á»£ng chia sáº» -->
        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/share"/>
    </LinearLayout>

    <!-- áº¢nh bÃ¬a sÃ¡ch -->
    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/topIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thanh Ä‘Ã¡nh giÃ¡ sao -->
    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4.0"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@id/bookCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- TiÃªu Ä‘á» sÃ¡ch -->
    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Book Title"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar" />

    <!-- TÃªn tÃ¡c giáº£ -->
    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Author Name"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookTitle" />

    <!-- ThÃ´ng tin sÃ¡ch -->
    <LinearLayout
        android:id="@+id/bookInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/bookAuthor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Khoáº£ng cÃ¡ch -->
        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <!-- Sá»‘ trang -->
        <TextView
            android:text="@string/_156_npages"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <!-- Khoáº£ng cÃ¡ch -->
        <Space
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <!-- Sá»‘ lÆ°á»£t Ä‘Ã¡nh giÃ¡ -->
        <TextView
            android:text="@string/_187_nreviews"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <!-- MÃ´ táº£ sÃ¡ch -->
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Description"
        android:textColor="#444444"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookInfo" />

    <!-- Pháº§n dÆ°á»›i: GiÃ¡ vÃ  nÃºt thÃªm vÃ o giá» hÃ ng -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="376dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Pháº§n hiá»ƒn thá»‹ giÃ¡ -->
    <LinearLayout
        android:id="@+id/priceContainer"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddToCart"
        app:layout_constraintStart_toStartOf="@+id/bottomLayout">

        <!-- NhÃ£n giÃ¡ -->
        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#181717"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <!-- GiÃ¡ trá»‹ giÃ¡ -->
        <TextView
            android:id="@+id/priceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Price"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- NÃºt thÃªm vÃ o giá» hÃ ng -->
    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="220dp"
        android:layout_height="57dp"
        android:backgroundTint="#1E90FF"
        android:drawableStart="@drawable/gio"
        android:drawablePadding="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="ðŸ›’ Add to cart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottomLayout"
        android:textSize="25sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>