<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back button to navigate to the previous screen -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="Back"
        android:tint="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Title of the screen -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Top Up Wallet"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Description text providing instructions -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Enter the amount you want to add to your wallet"
        android:textColor="#888888"
        android:textSize="16sp" />

    <!-- Input field for entering the top-up amount -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescription"
        android:layout_marginTop="32dp"
        app:startIconDrawable="@android:drawable/ic_menu_edit"
        app:startIconTint="#1E90FF">

        <!-- EditText for the user to input the amount -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount (USD)"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to confirm and process the top-up -->
    <Button
        android:id="@+id/btnTopUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tilAmount"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1E90FF"
        android:padding="12dp"
        android:text="Top Up"
        android:textColor="#FFFFFF" />

</RelativeLayout>