<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <!-- Back button to navigate to the previous screen -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="Back"
        android:tint="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Title text for the Favorites screen -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:text="Favorites"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <!-- Subtitle text providing additional information -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:text="Here are your favorite books."
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <!-- CardView to display a book item -->
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="8dp">

        <!-- Container layout for book details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ImageView to display the book cover -->
            <ImageView
                android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"/>
            <!-- android:src="@drawable/book_placeholder"/> -->

            <!-- TextView to display the book title -->
            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Book Title"
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="14sp"/>

            <!-- TextView to display the book author -->
            <TextView
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingBottom="4dp"
                android:text="Author"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>